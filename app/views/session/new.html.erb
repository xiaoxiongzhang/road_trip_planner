<h1>Login</h1>

<div class="row">
  <div class="col-sm-4">
    <%= form_tag '/session', method: "post", remote: true, class: "login_form" do %>
      <div class="form-group">
        <%= text_field_tag :email, nil, class: "form-control", placeholder: "email" %>
      </div>
      <div class="form-group">
        <%= password_field_tag :password, nil, class: "form-control", placeholder: "password" %>
      </div>
      <%= submit_tag "login", class: "btn btn-primary", style: "margin-right: 15px" %>
      <%= link_to "register", "/user/new" %>
    <% end %>
  </div>
  <div class="col-sm-8">
  </div>
</div>

<%= content_for :javascripts do %>
  <script type="text/javascript">
      $('.login_form').on('ajax:success', function(event, data) {
          if (data.status == 'ok') {
              window.location.href = data.msg.redirect_url;
          } else {
              alert(data.msg);
          }
      })
  </script>
<% end -%>